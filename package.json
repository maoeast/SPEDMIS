{
  "name": "SPED_MIS",
  "version": "1.1.0",
  "description": "特殊教育多模态干预系统桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "prebuild": "node build/inject-keys.js",
    "build": "npm run prebuild && cross-env NODE_ENV=production electron-builder --win --x64",
    "rebuild": "npm rebuild && electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "predeploy": "npm test && node pre-deployment-checklist.js",
    "deploy": "npm run build"
  },
  "build": {
    "appId": "com.hzxckj.specialeducation",
    "productName": "特殊教育多模态干预系统",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/*.md",
      "!**/*.txt",
      "!**/*分析*",
      "!**/*报告*",
      "!verify-keys.js",
      "!fontawesome/js/**",
      "!fontawesome/scss/**",
      "!fontawesome/sprites*/**",
      "!fontawesome/svgs*/**",
      "!fontawesome/metadata/**",
      "fontawesome/css/**",
      "fontawesome/webfonts/**",
      "*.html",
      "*.js",
      "images/**/*",
      "*.json"
    ],
    "asar": true,
    "asarUnpack": [
      "images/**/*",
      "fontawesome/webfonts/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "images/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "images/icon.ico",
      "uninstallerIcon": "images/icon.ico",
      "installerHeaderIcon": "images/icon.ico"
    }
  },
  "keywords": [
    "Electron",
    "特殊教育",
    "多模态",
    "干预系统"
  ],
  "author": "HangZhou ShineCan Technology Co.,Ltd",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "chart.js": "^3.9.1",
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^23.0.0",
    "electron-builder": "^26.0.12",
    "electron-packager": "^14.0.0",
    "jest": "^29.0.0"
  }
}
